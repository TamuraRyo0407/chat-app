<div class="main_header">
  <div class="header_name">
    hogehuga
  </div>
  <div class="header_button">
    <a href="#">チャットを終了する</a>
  </div>
</div>

<div class="chat">
  <div class="message">
    <div class="upper_message">
      <div class="message_name">
        Tom
      </div>
      <div class="message_date">
        2020/3/31(Wed) 12:43:30
      </div>
    </div>
    <div class="lower_message">
      <div class="message_text">
        おはよう
      </div>
    </div>
  </div>
  <div class="message">
    <div class="upper_message">
      <div class="message_name">
        Sim
      </div>
      <div class="message_date">
        2020/3/31(Wed) 12:43:30
      </div>
    </div>
    <div class="lower_message">
      <div class="message_text">
        こんばんは
      </div>
    </div>
  </div>
</div>

<%= form_with model: [@room, @message], html: {class: "form"}, local: true do |f|%>
  <div class="form_input">
    <%= f.text_field :content, class: 'form_message', placeholder: 'type a message' %>
    <label class="form_image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form_submit' %>
<% end %>